<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_width="match_parent" android:layout_height="81dp">

    <GridLayout
            xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"

            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginLeft="@dimen/list_padding" android:layout_marginStart="@dimen/list_padding"
            android:columnCount="4"
            android:rowCount="2">


        <TextView
                android:text="@string/bus_name_mock"
                android:layout_width="wrap_content"
                android:layout_height="45dp" android:id="@+id/bus_name"
                android:gravity="bottom"
                android:textSize="22sp" android:textStyle="bold"
                android:textColor="@color/navbarGray" app:fontFamily="sans-serif"
                android:layout_row="0" android:layout_column="0" android:layout_columnSpan="3"/>

        <TextView
                android:text="@string/bus_status_message"
                android:layout_height="35dp" android:id="@+id/bus_status"
                android:textSize="17sp"
                android:textColor="@color/navbarGray" app:fontFamily="sans-serif-medium"
                android:layout_width="wrap_content"
                android:layout_gravity="top"
                android:layout_row="1" android:layout_column="0"/>

        <TextView
                android:text="@string/dash"
                android:layout_height="35dp" android:id="@+id/bus_status_time_dash"
                android:textSize="17sp"
                android:paddingLeft="7dp" android:paddingRight="7dp"
                android:gravity="center_horizontal"
                android:textColor="@color/navbarGray" app:fontFamily="sans-serif-light"
                android:layout_width="wrap_content"
                android:layout_gravity="top"
                android:layout_row="1" android:layout_column="1"
        />

        <TextView
                android:text="@string/bus_start_time_mock"
                android:layout_height="35dp" android:id="@+id/bus_status_time"
                android:textSize="17sp"
                android:textColor="@color/navbarGray" app:fontFamily="sans-serif-light"
                android:layout_width="wrap_content"

                android:layout_gravity="start"
                android:layout_row="1" android:layout_column="2"
        />

        <ImageButton
                android:layout_width="70dp"
                android:layout_height="35dp" app:srcCompat="@drawable/favorite_off" android:id="@+id/fav_button"
                android:contentDescription="@string/fav_button"
                android:paddingTop="6dp"
                android:background="@color/white"
                android:layout_gravity="fill_vertical | end"
                android:layout_column="3" android:layout_row="0" android:layout_rowSpan="2"/>
    </GridLayout>

    <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/separator"/>
</LinearLayout>


