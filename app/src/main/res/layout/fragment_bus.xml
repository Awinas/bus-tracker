<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent" android:layout_height="91dp">

    <GridLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"

            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginLeft="@dimen/list_padding" android:layout_marginStart="@dimen/list_padding"
            android:layout_marginRight="@dimen/list_padding" android:layout_marginEnd="@dimen/list_padding"
            android:columnCount="4"
            android:rowCount="3">


        <TextView
                android:text="@string/bus_test"
                android:layout_width="wrap_content"
                android:layout_height="45dp" android:id="@+id/bus_name"
                android:gravity="bottom"
                android:textSize="22sp" android:textStyle="bold"
                android:textColor="@color/navbarGray" app:fontFamily="sans-serif"
                android:layout_row="0" android:layout_column="0"/>
        <TextView
                android:text="@string/start_test"
                android:layout_height="45dp" android:id="@+id/bus_status"
                android:paddingTop="4dp" android:textSize="17sp"
                android:textColor="@color/navbarGray" app:fontFamily="sans-serif-medium"
                android:layout_width="wrap_content"
                android:layout_row="1" android:layout_column="0"/>

        <TextView
                android:text="@string/start_time_dash_test"
                android:layout_height="45dp" android:id="@+id/bus_status_time_dash"
                android:paddingTop="4dp" android:textSize="17sp"
                android:paddingLeft="5dp" android:paddingRight="5dp"
                android:gravity="center_horizontal"
                android:textColor="@color/navbarGray" app:fontFamily="sans-serif-light"
                android:layout_width="wrap_content"
                android:layout_gravity="start"
                android:layout_row="1" android:layout_column="1"
        />

        <TextView
                android:text="@string/start_time_test"
                android:layout_height="45dp" android:id="@+id/bus_status_time"
                android:paddingTop="4dp" android:textSize="17sp"
                android:textColor="@color/navbarGray" app:fontFamily="sans-serif-light"
                android:layout_width="wrap_content"
                android:layout_gravity="start"
                android:layout_row="1" android:layout_column="2"
        />

        <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp" app:srcCompat="@drawable/favorite" android:id="@+id/fav_button"
                android:contentDescription="@string/fav_button"
                android:paddingTop="5dp"
                android:background="@color/white"
                android:layout_gravity="fill_vertical"
                android:layout_column="3" android:layout_row="0" android:layout_rowSpan="2"/>
    </GridLayout>

    <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/separator"/>
</LinearLayout>


