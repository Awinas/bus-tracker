<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".LoginActivity" android:orientation="vertical">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp" android:layout_weight="1" android:layout_gravity="center_vertical"
            android:gravity="center_vertical" android:paddingRight="32dp" android:paddingLeft="32dp"
            android:paddingTop="32dp">
        <ImageView
                android:src="@drawable/vb_logo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/vb_logo"
                android:contentDescription="@string/vb_logo" android:adjustViewBounds="true"
                android:cropToPadding="false"/>
    </LinearLayout>
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp" android:layout_weight="1.7">

        <ImageView
                app:srcCompat="@drawable/login_background"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/login_background"
                android:cropToPadding="false" android:adjustViewBounds="false"
                android:scaleType="fitXY" android:contentDescription="@string/login_background"/>

        <Button
                tools:ignore="RtlSymmetry"
                android:layout_width="300dp"
                android:layout_height="@dimen/row_content_height" android:id="@+id/login_button" android:text="@string/login_button"
                android:gravity="fill_vertical"
                android:textAlignment="center"
                android:layout_marginBottom="80dp"
                android:textSize="18sp"
                android:background="@drawable/round_button"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:paddingRight="30dp"
                android:paddingEnd="30dp"
                android:drawableLeft="@mipmap/login_google_logo" android:drawableStart="@mipmap/login_google_logo"
        />
    </RelativeLayout>
</LinearLayout>